<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginLeft="10dp"
    android:layout_marginTop="10dp">

    <ImageView
        android:id="@+id/list_main_item_bg"
        android:layout_width="300dp"
        android:layout_height="400dp"
        android:scaleType="fitXY" />

    <ImageView
        android:id="@+id/list_main_item_iscollected"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_gravity="end"
        android:layout_marginRight="30dp"
        android:layout_marginTop="20dp"
        android:elevation="2dp" />

    <TextView
        android:id="@+id/list_main_item_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="270dp"
        android:text="Zhejiang Provincial"
        android:textColor="@color/white"
        android:textSize="20sp"
        android:textStyle="bold" />

    <ImageView
        android:layout_width="15dp"
        android:layout_height="15dp"
        android:layout_marginLeft="20dp"

        android:layout_marginTop="305dp"
        android:background="@drawable/collection_local" />

    <TextView
        android:id="@+id/list_main_item_local"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="300dp"
        android:text="Zhejiang Provincial"
        android:textColor="@color/white"
        android:textSize="15sp" />

</FrameLayout>